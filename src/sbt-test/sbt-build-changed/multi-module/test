> buildHash

# check if build hash file is written
$ absent app/target/build-hashes/build-hash-default
$ absent common/target/build-hashes/build-hash-default
> buildHashStore
$ exists app/target/build-hashes/build-hash-default
$ exists common/target/build-hashes/build-hash-default

# check if changes to app (which depends on common) does not change hash of common
$ copy-file app/target/build-hashes/build-hash-default app/target/build-hashes/build-hash-default.bak
$ copy-file common/target/build-hashes/build-hash-default common/target/build-hashes/build-hash-default.bak
$ touch app/src/main/scala/New.scala
> buildHashStore
$ newer app/target/build-hashes/build-hash-default app/target/build-hashes/build-hash-default.bak
$ copy-file app/target/build-hashes/build-hash-default app/target/build-hashes/build-hash-default.bak
-$ newer app/target/build-hashes/build-hash-default app/target/build-hashes/build-hash-default.bak
-$ newer common/target/build-hashes/build-hash-default common/target/build-hashes/build-hash-default.bak

# check if changes to common (which is used by app) does also change hash of app
$ copy-file common/src-new/main/scala/Helper.scala common/src/main/scala/Helper.scala
> buildHashStore
$ newer app/target/build-hashes/build-hash-default app/target/build-hashes/build-hash-default.bak
$ newer common/target/build-hashes/build-hash-default common/target/build-hashes/build-hash-default.bak
