> buildHash

# check if build hash file is written
$ absent app/target/build-hashes/default.sha1
$ absent common/target/build-hashes/default.sha1
> buildHashStore
$ exists app/target/build-hashes/default.sha1
$ exists common/target/build-hashes/default.sha1

# check if changes to app (which depends on common) does not change hash of common
$ copy-file app/target/build-hashes/default.sha1 app/target/build-hashes/default.sha1.bak
$ copy-file common/target/build-hashes/default.sha1 common/target/build-hashes/default.sha1.bak
$ touch app/src/main/scala/New.scala
> buildHashStore
$ newer app/target/build-hashes/default.sha1 app/target/build-hashes/default.sha1.bak
$ copy-file app/target/build-hashes/default.sha1 app/target/build-hashes/default.sha1.bak
-$ newer app/target/build-hashes/default.sha1 app/target/build-hashes/default.sha1.bak
-$ newer common/target/build-hashes/default.sha1 common/target/build-hashes/default.sha1.bak

# check if changes to common (which is used by app) does also change hash of app
$ copy-file common/src-new/main/scala/Helper.scala common/src/main/scala/Helper.scala
> buildHashStore
$ newer app/target/build-hashes/default.sha1 app/target/build-hashes/default.sha1.bak
$ newer common/target/build-hashes/default.sha1 common/target/build-hashes/default.sha1.bak
